---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TopicLayout from '../../layouts/TopicLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const agentTopics = await getCollection('agent');
  return agentTopics.map((topic) => {
    const slug = topic.id.replace(/\/readme$/, '');
    return {
      params: { slug },
      props: { topic },
    };
  });
}

const { topic } = Astro.props;
const { Content } = await render(topic);
---

<BaseLayout title={topic.data.title}>
  <TopicLayout
    title={topic.data.title}
    category={topic.data.category}
    difficulty={topic.data.difficulty}
    date={topic.data.date}
    status={topic.data.status}
    tags={topic.data.tags}
  >
    <Content />
  </TopicLayout>
</BaseLayout>
