---
import { getCollection, render } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import ExperimentHeader from '../../../../components/ExperimentHeader.astro';

// Generate all possible experiment paths
export const getStaticPaths: GetStaticPaths = async () => {
  const experiments = await getCollection('experiments');
  const paths = experiments.map((experiment) => {
    // Extract topic ID and experiment ID from the path
    // Path format: topics/mcp-deep-dive/experiments/01-protocol-inspector/README.md
    const pathParts = experiment.id.split('/');
    const topicId = pathParts[0]; // e.g., "mcp-deep-dive"
    const expId = pathParts[2];   // e.g., "01-protocol-inspector"

    return {
      params: {
        id: topicId,
        expId: expId,
      },
      props: { experiment },
    };
  });

  return paths;
};

const { experiment } = Astro.props;
const { Content } = await render(experiment);

// Build breadcrumb
const pathParts = experiment.id.split('/');
const topicId = pathParts[0];
const expId = pathParts[2];
const expNumber = experiment.data.experiment.toString().padStart(2, '0');
---

<BaseLayout title={experiment.data.title}>
  <nav class="breadcrumb">
    <a href="/">Home</a>
    <span> / </span>
    <a href="/topics">Topics</a>
    <span> / </span>
    <a href={`/topics/${topicId}`}>{experiment.data.parent || topicId}</a>
    <span> / </span>
    <span class="current">Exp-{expNumber}</span>
  </nav>

  <main>
    <ExperimentHeader experiment={experiment} />
    <div class="content">
      <Content />
    </div>
  </main>
</BaseLayout>

<style>
  .breadcrumb {
    padding: 1rem 2rem;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--border);
  }

  .breadcrumb a {
    color: var(--accent);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .breadcrumb .current {
    color: var(--text-secondary);
  }

  main {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .content {
    line-height: 1.6;
  }

  .content pre {
    background: var(--code-bg);
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--border);
  }

  .content code {
    background: var(--code-bg);
    color: var(--text-primary);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .content pre code {
    background: transparent;
    padding: 0;
  }

  .content h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .content h2 {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .content h3 {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--text-secondary);
  }
</style>
