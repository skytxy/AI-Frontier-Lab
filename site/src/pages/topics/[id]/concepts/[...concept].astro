---
import { getCollection, render } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import BaseLayout from '../../../../layouts/BaseLayout.astro';

// Generate all concept paths
export const getStaticPaths: GetStaticPaths = async () => {
  const concepts = await getCollection('concepts');
  const paths = concepts.map((concept) => {
    // Extract topic ID and concept filename from the path
    // Path format: topics/001-mcp-deep-dive/concepts/mcp-basics.md
    const pathParts = concept.id.split('/');
    const topicId = pathParts[0]; // e.g., "001-mcp-deep-dive"
    const conceptFile = pathParts[2]; // e.g., "mcp-basics.md"
    const conceptId = conceptFile.replace('.md', ''); // e.g., "mcp-basics"

    return {
      params: {
        id: topicId,
        concept: conceptId,
      },
      props: { concept },
    };
  });

  return paths;
};

const { concept } = Astro.props;
const { Content } = await render(concept);

// Build breadcrumb
const pathParts = concept.id.split('/');
const topicId = pathParts[0];
const conceptTitle = concept.data.title || concept.id.split('/').pop()?.replace('.md', '') || 'Concept';
---

<BaseLayout title={`${conceptTitle} - Concept`}>
  <nav class="breadcrumb">
    <a href="/">Home</a>
    <span> / </span>
    <a href="/topics">Topics</a>
    <span> / </span>
    <a href={`/topics/${topicId}`}>{topicId}</a>
    <span> / </span>
    <span class="current">Concepts</span>
  </nav>

  <main class="concept-page">
    <article class="concept-content">
      <Content />
    </article>

    <nav class="concept-nav">
      <h2>相关概念</h2>
      <ul>
        <li><a href={`/topics/${topicId}`}>← 返回 {topicId}</a></li>
      </ul>
    </nav>
  </main>
</BaseLayout>

<style>
  .breadcrumb {
    padding: 1rem 2rem;
    background: var(--bg-tertiary);
    border-bottom: 1px solid var(--border);
  }

  .breadcrumb a {
    color: var(--accent);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .breadcrumb .current {
    color: var(--text-secondary);
  }

  .concept-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .concept-content {
    line-height: 1.8;
  }

  .concept-content pre {
    background: var(--code-bg);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--border);
  }

  .concept-content code {
    background: var(--code-bg);
    color: var(--text-primary);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .concept-content pre code {
    background: transparent;
    padding: 0;
  }

  .concept-content h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .concept-content h2 {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
    border-bottom: 2px solid var(--border);
    padding-bottom: 0.5rem;
  }

  .concept-content h3 {
    font-size: 1.25rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--text-secondary);
  }

  .concept-content ul, .concept-content ol {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  .concept-content li {
    margin-bottom: 0.5rem;
  }

  .concept-nav {
    margin-top: 3rem;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border-radius: 8px;
    border: 1px solid var(--border);
  }

  .concept-nav h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .concept-nav ul {
    list-style: none;
    padding: 0;
  }

  .concept-nav li {
    margin-bottom: 0.5rem;
  }

  .concept-nav a {
    color: var(--accent);
    text-decoration: none;
  }

  .concept-nav a:hover {
    text-decoration: underline;
  }
</style>
