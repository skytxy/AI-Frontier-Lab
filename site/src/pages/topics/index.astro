---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allAgentTopics = await getCollection('agent');
const allAlgoTopics = await getCollection('algo');

// Sort by sort field, then by date
const sortBySort = (items) =>
  items.sort((a, b) => {
    const aSort = a.data.sort || parseFloat(a.data.date.toISOString().slice(0, 4));
    const bSort = b.data.sort || parseFloat(b.data.date.toISOString().slice(0, 4));
    return aSort - bSort;
  });

const agentTopics = sortBySort(allAgentTopics);
const algoTopics = sortBySort(allAlgoTopics);
---

<BaseLayout title="All Topics - AI Frontier Lab">
  <section class="topics-listing">
    <div class="page-header">
      <h1>All Topics</h1>
      <p class="page-description">Explore all AI Frontier Lab topics, from Agent infrastructure to algorithm research</p>
    </div>

    <section class="topic-section">
      <div class="section-header">
        <div class="section-icon agent-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
            <line x1="12" y1="8" x2="12" y2="16"/>
            <line x1="8" y1="12" x2="16" y2="12"/>
          </svg>
        </div>
        <div>
          <h2>Agent Topics</h2>
          <p class="section-desc">Agent infrastructure: MCP, Workflows, LSP, Hooks</p>
        </div>
      </div>
      <div class="topic-grid">
        {agentTopics.map((topic) => (
          <a href={`/topics/${topic.id.replace(/\/readme$/, '')}/`} class="topic-card">
            <div class="card-accent"></div>
            <div class="card-header">
              <span class="topic-id">{topic.id.split('/')[0]}</span>
              <span class="difficulty-badge" data-level={topic.data.difficulty}>
                {topic.data.difficulty === 'beginner' && 'Beginner'}
                {topic.data.difficulty === 'intermediate' && 'Intermediate'}
                {topic.data.difficulty === 'advanced' && 'Advanced'}
              </span>
            </div>
            <h3 class="topic-title">{topic.data.title}</h3>
            <div class="topic-meta">
              <span class="category-badge">{topic.data.category}</span>
              <span class="status-indicator" data-status={topic.data.status}>
                <span class="status-dot"></span>
                {topic.data.status === 'completed' && 'Complete'}
                {topic.data.status === 'in-progress' && 'In Progress'}
                {topic.data.status === 'published' && 'Published'}
                {topic.data.status === 'draft' && 'Draft'}
              </span>
            </div>
            <div class="topic-tags">
              {topic.data.tags.slice(0, 3).map((tag: string) => (
                <span class="tag">#{tag}</span>
              ))}
              {topic.data.tags.length > 3 && (
                <span class="tag-more">+{topic.data.tags.length - 3}</span>
              )}
            </div>
          </a>
        ))}
      </div>
    </section>

    {algoTopics.length > 0 && (
      <section class="topic-section algo-section">
        <div class="section-header">
          <div class="section-icon algo-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M8 12h8m-4-4v8"/>
            </svg>
          </div>
          <div>
            <h2>Algo Topics</h2>
            <p class="section-desc">Core algorithms: Deep Learning, Transformer, RL</p>
          </div>
        </div>
        <div class="topic-grid">
          {algoTopics.map((topic) => (
            <a href={`/algo/${topic.id.replace(/\/readme$/, '')}/`} class="topic-card">
              <div class="card-accent"></div>
              <div class="card-header">
                <span class="topic-id">{topic.id.split('/')[0]}</span>
                <span class="difficulty-badge" data-level={topic.data.difficulty}>
                  {topic.data.difficulty === 'beginner' && 'Beginner'}
                  {topic.data.difficulty === 'intermediate' && 'Intermediate'}
                  {topic.data.difficulty === 'advanced' && 'Advanced'}
                </span>
              </div>
              <h3 class="topic-title">{topic.data.title}</h3>
              <div class="topic-meta">
                <span class="category-badge">{topic.data.category}</span>
                <span class="status-indicator" data-status={topic.data.status}>
                  <span class="status-dot"></span>
                  {topic.data.status === 'completed' && 'Complete'}
                  {topic.data.status === 'in-progress' && 'In Progress'}
                  {topic.data.status === 'published' && 'Published'}
                  {topic.data.status === 'draft' && 'Draft'}
                </span>
              </div>
              <div class="topic-tags">
                {topic.data.tags.slice(0, 3).map((tag: string) => (
                  <span class="tag">#{tag}</span>
                ))}
                {topic.data.tags.length > 3 && (
                  <span class="tag-more">+{topic.data.tags.length - 3}</span>
                )}
              </div>
            </a>
          ))}
        </div>
      </section>
    )}
  </section>
</BaseLayout>

<style>
  .topics-listing {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: clamp(2rem, 5vw, 2.5rem);
    margin-bottom: 0.5rem;
  }

  .page-description {
    color: var(--text-muted);
    font-size: 1rem;
  }

  .topic-section {
    margin-bottom: 4rem;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border);
  }

  .section-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    color: var(--accent);
    flex-shrink: 0;
  }

  .agent-icon {
    color: var(--accent);
  }

  .algo-icon {
    color: var(--warning);
  }

  .section-header h2 {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }

  .section-desc {
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .topic-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .topic-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }

  .card-accent {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--accent);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .topic-card:hover .card-accent {
    transform: scaleX(1);
  }

  .topic-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .topic-card[data-type="algo"] .card-accent {
    background: var(--warning);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .topic-id {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--text-muted);
    background: var(--bg-tertiary);
    padding: 0.3rem 0.5rem;
    border-radius: var(--radius-sm);
    letter-spacing: 0.05em;
  }

  .difficulty-badge {
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.3rem 0.6rem;
    border-radius: var(--radius-sm);
    font-family: 'IBM Plex Mono', monospace;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .difficulty-badge[data-level="beginner"] {
    background: var(--success);
    color: #fff;
  }
  .difficulty-badge[data-level="intermediate"] {
    background: var(--warning);
    color: #1a1a2e;
  }
  .difficulty-badge[data-level="advanced"] {
    background: var(--danger);
    color: #fff;
  }

  .topic-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary);
    line-height: 1.4;
  }

  .topic-meta {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .category-badge {
    font-size: 0.7rem;
    color: var(--text-secondary);
    background: var(--bg-tertiary);
    padding: 0.3rem 0.6rem;
    border-radius: var(--radius-sm);
    font-weight: 500;
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.7rem;
    padding: 0.3rem 0.6rem;
    border-radius: var(--radius-sm);
    background: var(--bg-tertiary);
    color: var(--text-secondary);
  }

  .status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--text-muted);
  }

  .status-indicator[data-status="completed"] .status-dot {
    background: var(--success);
  }
  .status-indicator[data-status="in-progress"] .status-dot {
    background: var(--warning);
    animation: pulse 2s ease-in-out infinite;
  }
  .status-indicator[data-status="published"] .status-dot {
    background: var(--info);
  }

  .topic-tags {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
    margin-top: auto;
  }

  .tag {
    font-size: 0.7rem;
    color: var(--accent);
    background: var(--accent-subtle);
    padding: 0.25rem 0.5rem;
    border-radius: 50px;
    font-weight: 500;
  }

  .tag-more {
    font-size: 0.7rem;
    color: var(--text-muted);
    font-style: italic;
  }

  .algo-section {
    position: relative;
  }

  .algo-section::before {
    content: '';
    position: absolute;
    top: -2rem;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border), transparent);
  }

  @media (max-width: 640px) {
    .topic-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
