<style>
  /* Hero Section */
  .hero {
    position: relative;
    text-align: center;
    padding: 5rem 1rem 4rem;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--accent) 0%, #764ba2 50%, #667eea 100%);
    opacity: 0.1;
    z-index: -1;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, var(--accent) 0%, transparent 70%);
    opacity: 0.1;
    animation: pulse 8s ease-in-out infinite;
  }

  .hero-content {
    position: relative;
    max-width: 700px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--accent-subtle);
    color: var(--accent);
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 600;
    margin-bottom: 2rem;
    border: 1px solid var(--accent-subtle);
  }

  .badge-icon {
    font-size: 1rem;
  }

  .hero h1 {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: -0.03em;
  }

  .hero-description {
    font-size: clamp(1.1rem, 2.5vw, 1.35rem);
    line-height: 1.6;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .hero-subtitle {
    font-size: 1rem;
    color: var(--text-secondary);
    margin-bottom: 2.5rem;
    font-family: 'IBM Plex Mono', monospace;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 700;
    font-family: 'IBM Plex Mono', monospace;
    margin-bottom: 0.25rem;
    color: var(--text-primary);
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 2rem;
    background: var(--border);
  }

  /* Topics Section */
  .topics-section {
    max-width: 1200px;
    margin: 0 auto 4rem;
    padding: 0 1rem;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .section-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    color: var(--accent);
    flex-shrink: 0;
  }

  .section-header h2 {
    font-size: 1.75rem;
    margin-bottom: 0.25rem;
  }

  .section-description {
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .topics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 1.5rem;
  }

  .topic-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }

  .card-accent {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .topic-card:hover .card-accent {
    transform: scaleX(1);
  }

  .topic-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .topic-card[data-type="algo"] .card-accent {
    background: var(--warning);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .topic-id {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--text-muted);
    background: var(--bg-tertiary);
    padding: 0.3rem 0.5rem;
    border-radius: var(--radius-sm);
    letter-spacing: 0.05em;
  }

  .difficulty-badge {
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.3rem 0.6rem;
    border-radius: var(--radius-sm);
    font-family: 'IBM Plex Mono', monospace;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .difficulty-badge[data-level="beginner"] {
    background: var(--success);
    color: #fff;
  }
  .difficulty-badge[data-level="intermediate"] {
    background: var(--warning);
    color: #1a1a2e;
  }
  .difficulty-badge[data-level="advanced"] {
    background: var(--danger);
    color: #fff;
  }

  .topic-title {
    font-size: 1.15rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-primary);
    line-height: 1.4;
  }

  .topic-meta {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .category-badge {
    font-size: 0.7rem;
    color: var(--text-secondary);
    background: var(--bg-tertiary);
    padding: 0.3rem 0.6rem;
    border-radius: var(--radius-sm);
    font-weight: 500;
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.75rem;
    padding: 0.3rem 0.6rem;
    border-radius: var(--radius-sm);
    background: var(--bg-tertiary);
    color: var(--text-secondary);
  }

  .status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--text-muted);
  }

  .status-indicator[data-status="completed"] .status-dot {
    background: var(--success);
  }
  .status-indicator[data-status="in-progress"] .status-dot {
    background: var(--warning);
    animation: pulse 2s ease-in-out infinite;
  }
  .status-indicator[data-status="published"] .status-dot {
    background: var(--info);
  }

  .topic-tags {
    display: flex;
    gap: 0.4rem;
    flex-wrap: wrap;
    margin-top: auto;
    margin-bottom: 1rem;
  }

  .tag {
    font-size: 0.7rem;
    color: var(--accent);
    background: var(--accent-subtle);
    padding: 0.25rem 0.5rem;
    border-radius: 50px;
    font-weight: 500;
  }

  .tag-more {
    font-size: 0.7rem;
    color: var(--text-muted);
    font-style: italic;
  }

  .topic-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
    margin-top: auto;
  }

  .topic-footer time {
    font-size: 0.75rem;
    font-family: 'IBM Plex Mono', monospace;
    color: var(--text-muted);
  }

  .card-arrow {
    font-size: 1.25rem;
    color: var(--accent);
    transition: transform 0.2s ease;
  }

  .topic-card:hover .card-arrow {
    transform: translateX(4px);
  }

  /* Paper Info */
  .paper-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  .paper-icon {
    font-size: 1rem;
  }

  .paper-title {
    font-style: italic;
  }

  .paper-year {
    color: var(--text-muted);
    font-size: 0.75rem;
  }

  /* Empty State */
  .empty-state {
    grid-column: 1 / -1;
    text-align: center;
    padding: 4rem 2rem;
    background: var(--bg-secondary);
    border: 2px dashed var(--border);
    border-radius: var(--radius-lg);
  }

  .empty-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .empty-state p {
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }

  .empty-hint {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  /* Algo Section */
  .algo-section {
    position: relative;
  }

  .algo-section::before {
    content: '';
    position: absolute;
    top: -2rem;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border), transparent);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-stats {
      flex-wrap: wrap;
      gap: 1rem;
    }

    .stat-divider {
      display: none;
    }

    .topics-grid {
      grid-template-columns: 1fr;
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
