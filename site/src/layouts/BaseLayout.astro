---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | AI-Frontier-Lab</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Noto Sans Mono CJK SC for proper ASCII art alignment with Chinese characters -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Mono+CJK+SC:wght@400;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="logo">AI-Frontier-Lab</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; 2026 AI-Frontier-Lab</p>
    </footer>
  </body>
</html>

<style>
  :global(*) {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :global(body) {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #1a1a2e;
    background: #f8f9fa;
    line-height: 1.6;
  }

  /* Fix ASCII art alignment - use Noto Sans Mono CJK SC for proper CJK/ASCII width ratio */
  :global(pre) {
    /* Noto Sans Mono CJK SC is designed with 2:1 CJK-to-ASCII width ratio for perfect alignment */
    font-family: 'Noto Sans Mono CJK SC', 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', 'Droid Sans Mono', 'Source Code Pro', 'Menlo', 'Consolas', 'Courier New', monospace !important;
    font-size: 0.9em;
    line-height: 1.2;
    overflow-x: auto;
    white-space: pre;
    -moz-tab-size: 4;
    -o-tab-size: 4;
    tab-size: 4;
    font-variant-ligatures: none;
    letter-spacing: 0;
    /* Force correct character width for alignment */
    font-feature-settings: 'tnum' 1, 'zero' 1;
  }

  :global(code) {
    font-family: 'Noto Sans Mono CJK SC', 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', 'Droid Sans Mono', 'Source Code Pro', monospace;
    font-size: 0.9em;
  }

  /* Ensure diagrams align properly */
  :global(pre code) {
    display: block;
    padding: 0;
    background: transparent;
  }

  header {
    background: #1a1a2e;
    padding: 1rem 2rem;
  }

  .logo {
    color: #e94560;
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 700;
  }

  main {
    max-width: 960px;
    margin: 2rem auto;
    padding: 0 1.5rem;
  }

  footer {
    text-align: center;
    padding: 2rem;
    color: #888;
    font-size: 0.875rem;
  }
</style>
