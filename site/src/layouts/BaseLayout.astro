---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | AI-Frontier-Lab</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Premium font pairing for technical/lab aesthetic -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&family=Noto+Sans+Mono+CJK+SC:wght@400;700&display=swap" rel="stylesheet" />

    <!-- Theme Toggle Script -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 'auto';
        const effective = theme === 'auto'
          ? (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light')
          : theme;
        document.documentElement.setAttribute('data-effective-theme', effective);
        if (theme !== 'auto') {
          document.documentElement.setAttribute('data-theme', theme);
        }
      })();
    </script>
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="logo">
          <span class="logo-icon">◈</span>
          AI-Frontier-Lab
        </a>
        <div class="nav-right">
          <a href="/topics" class="nav-link">Topics</a>
          <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme" title="点击切换主题: Light <-> Dark <-> Auto">
            <span class="theme-label" id="theme-label">Auto</span>
            <svg class="icon-sun" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <circle cx="12" cy="12" r="4"></circle>
              <line x1="12" y1="2" x2="12" y2="4"></line>
              <line x1="12" y1="20" x2="12" y2="22"></line>
              <line x1="4.93" y1="4.93" x2="6.34" y2="6.34"></line>
              <line x1="17.66" y1="17.66" x2="19.07" y2="19.07"></line>
              <line x1="2" y1="12" x2="4" y2="12"></line>
              <line x1="20" y1="12" x2="22" y2="12"></line>
            </svg>
            <svg class="icon-moon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
            </svg>
            <svg class="icon-auto" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <circle cx="12" cy="12" r="3"></circle>
              <path d="M12 1v6m0 6v6m5.66-14.66l-4.24 4.24M4.34 19.66l4.24-4.24M23 12h-6m-6 0H1"></path>
            </svg>
          </button>
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <div class="footer-content">
        <p>&copy; 2026 AI-Frontier-Lab</p>
        <p class="footer-tag">Exploring AI Frontiers</p>
      </div>
    </footer>

    <script is:inline>
      (function() {
        const THEMES = ['light', 'dark', 'auto'];
        const STORAGE_KEY = 'theme';
        const toggle = document.getElementById('theme-toggle');

        function getSystemTheme() {
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }

        function getEffectiveTheme(theme) {
          return theme === 'auto' ? getSystemTheme() : theme;
        }

        function applyTheme(theme) {
          const effective = getEffectiveTheme(theme);
          document.documentElement.setAttribute('data-theme', theme === 'auto' ? '' : theme);
          document.documentElement.setAttribute('data-effective-theme', effective);
          updateIcon(theme);
        }

        function updateIcon(theme) {
          const icons = toggle.querySelectorAll('svg');
          icons.forEach(icon => icon.style.display = 'none');
          const label = document.getElementById('theme-label');

          const THEME_LABELS = { 'light': 'Light', 'dark': 'Dark', 'auto': 'Auto' };
          const THEME_NEXT = { 'light': 'Dark', 'dark': 'Auto', 'auto': 'Light' };

          if (theme === 'light') {
            toggle.querySelector('.icon-sun').style.display = 'block';
          } else if (theme === 'dark') {
            toggle.querySelector('.icon-moon').style.display = 'block';
          } else {
            toggle.querySelector('.icon-auto').style.display = 'block';
          }

          if (label) {
            label.textContent = THEME_LABELS[theme];
            toggle.title = `当前: ${THEME_LABELS[theme]} (点击切换到 ${THEME_NEXT[theme]})`;
          }
        }

        const savedTheme = localStorage.getItem(STORAGE_KEY) || 'auto';
        let currentTheme = savedTheme;
        applyTheme(currentTheme);

        if (toggle) {
          toggle.addEventListener('click', function() {
            const idx = THEMES.indexOf(currentTheme);
            currentTheme = THEMES[(idx + 1) % THEMES.length];
            localStorage.setItem(STORAGE_KEY, currentTheme);
            applyTheme(currentTheme);
          });
        }

        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', function() {
          applyTheme(localStorage.getItem(STORAGE_KEY) || 'auto');
        });

        window.addEventListener('storage', function(e) {
          if (e.key === STORAGE_KEY && e.newValue) {
            currentTheme = e.newValue;
            applyTheme(currentTheme);
          }
        });
      })();
    </script>
  </body>
</html>

<style is:global>
  /* ============================================
     DESIGN SYSTEM: Modern AI Platform Aesthetic
     Inspired by Claude, ChatGPT, Gemini
     ============================================ */

  :root {
    /* Light Mode - Clean, professional */
    --bg-primary: #ffffff;
    --bg-secondary: #f9fafb;
    --bg-tertiary: #f3f4f6;
    --bg-elevated: #ffffff;

    --text-primary: #111827;
    --text-secondary: #374151;
    --text-muted: #6b7280;

    /* Accent - Professional blue-violet */
    --accent: #6366f1;
    --accent-hover: #4f46e5;
    --accent-subtle: rgba(99, 102, 241, 0.1);

    --border: #e5e7eb;
    --border-strong: #d1d5db;

    --code-bg: #1e293b;
    --code-text: #e2e8f0;

    --success: #10b981;
    --warning: #f59e0b;
    --danger: #ef4444;
    --info: #3b82f6;

    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.04);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.07);
    --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);

    --header-bg: rgba(255, 255, 255, 0.85);
    --header-border: rgba(229, 231, 235, 0.8);
    --header-text: #111827;

    --blockquote-bg: #fef3c7;
    --blockquote-text: #92400e;
    --blockquote-border: #f59e0b;

    --card-hover: #f9fafb;

    --radius-sm: 6px;
    --radius-md: 8px;
    --radius-lg: 12px;
    --radius-xl: 16px;
  }

  [data-effective-theme="dark"] {
    /* Dark Mode - Modern, comfortable (Claude-inspired) */
    --bg-primary: #1a1a1a;
    --bg-secondary: #242424;
    --bg-tertiary: #2d2d2d;
    --bg-elevated: #2d2d2d;

    --text-primary: #ececec;
    --text-secondary: #b4b4b4;
    --text-muted: #737373;

    /* Accent - Softer blue-violet for dark mode */
    --accent: #818cf8;
    --accent-hover: #a5b4fc;
    --accent-subtle: rgba(129, 140, 248, 0.15);

    --border: #404040;
    --border-strong: #525252;

    --code-bg: #0d0d0d;
    --code-text: #e4e4e7;

    --success: #4ade80;
    --warning: #fbbf24;
    --danger: #f87171;
    --info: #60a5fa;

    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.5);

    --header-bg: rgba(26, 26, 26, 0.85);
    --header-border: rgba(64, 64, 64, 0.6);
    --header-text: #ececec;

    --blockquote-bg: rgba(251, 191, 36, 0.12);
    --blockquote-text: #fde68a;
    --blockquote-border: #fbbf24;

    --card-hover: #2d2d2d;
  }

  /* Smooth theme transitions */
  * {
    transition: background-color 0.25s ease, border-color 0.25s ease, color 0.15s ease;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  @keyframes shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }
</style>

<style>
  :global(*) {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :global(body) {
    /* Space Grotesk for headings (technical, modern) */
    /* System fonts for body (clean, readable) */
    /* IBM Plex Mono for code (characterful) */
    font-family: 'Space Grotesk', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: var(--text-primary);
    background: var(--bg-primary);
    line-height: 1.7;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Enhanced typography scale */
  :global(h1), :global(h2), :global(h3), :global(h4) {
    font-weight: 600;
    letter-spacing: -0.02em;
    color: var(--text-primary);
  }

  :global(h1) {
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    line-height: 1.2;
  }

  :global(h2) {
    font-size: clamp(1.3rem, 3vw, 1.6rem);
    line-height: 1.3;
  }

  :global(h3) {
    font-size: clamp(1.1rem, 2vw, 1.3rem);
  }

  :global(p) {
    margin-bottom: 1em;
  }

  :global(a) {
    color: var(--accent);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s ease;
  }

  :global(a:hover) {
    border-bottom-color: var(--accent);
  }

  /* Enhanced code blocks with syntax feel */
  :global(pre) {
    font-family: 'IBM Plex Mono', 'Noto Sans Mono CJK SC', 'SF Mono', monospace !important;
    font-size: 0.875em;
    line-height: 1.5;
    overflow-x: auto;
    white-space: pre;
    tab-size: 2;
    font-variant-ligatures: none;
    letter-spacing: 0;
    background: var(--code-bg);
    color: var(--code-text);
    padding: 1.25rem;
    border-radius: var(--radius-md);
    margin: 1.5rem 0;
    border: 1px solid var(--border);
  }

  :global(code) {
    font-family: 'IBM Plex Mono', 'Noto Sans Mono CJK SC', monospace;
    font-size: 0.9em;
    background: var(--bg-tertiary);
    color: var(--text-primary);
    padding: 0.2rem 0.5rem;
    border-radius: var(--radius-sm);
  }

  :global(pre code) {
    display: block;
    padding: 0;
    background: transparent;
    color: inherit;
  }

  /* Enhanced blockquotes with proper dark mode */
  :global(blockquote) {
    margin: 1.5rem 0;
    padding: 1rem 1.25rem;
    background: var(--blockquote-bg);
    border-left: 4px solid var(--blockquote-border);
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
    color: var(--blockquote-text);
  }

  :global(blockquote p:last-child) {
    margin-bottom: 0;
  }

  /* Tables */
  :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  :global(th), :global(td) {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid var(--border);
  }

  :global(th) {
    font-weight: 600;
    color: var(--text-secondary);
    background: var(--bg-tertiary);
  }

  :global(tr:hover) {
    background: var(--bg-tertiary);
  }

  /* Header */
  header {
    background: var(--header-bg);
    border-bottom: 1px solid var(--header-border);
    padding: 0.75rem 1.5rem;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  header nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--header-text);
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  .logo-icon {
    font-size: 1.25rem;
    color: var(--accent);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .nav-link {
    color: var(--header-text);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    opacity: 0.8;
    transition: opacity 0.2s ease;
    border: none;
  }

  .nav-link:hover {
    opacity: 1;
  }

  .theme-toggle {
    background: transparent;
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    padding: 0.35rem 0.65rem;
    cursor: pointer;
    color: var(--header-text);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.35rem;
    font-size: 0.8rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .theme-toggle:hover {
    background: var(--bg-tertiary);
    border-color: var(--header-text);
  }

  .theme-label {
    font-size: 0.8rem;
    min-width: 2.2rem;
    text-align: center;
  }

  .theme-toggle svg {
    display: none;
  }

  .theme-toggle .icon-sun {
    display: block;
  }

  /* Main content area */
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
    animation: fadeInUp 0.4s ease;
  }

  /* Footer */
  footer {
    border-top: 1px solid var(--border);
    padding: 2rem 1.5rem;
    text-align: center;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-content p {
    color: var(--text-muted);
    font-size: 0.8rem;
    margin: 0;
  }

  .footer-tag {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    color: var(--accent);
  }

  @media (max-width: 640px) {
    .footer-content {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
