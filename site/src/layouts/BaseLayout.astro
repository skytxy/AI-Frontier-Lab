---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | AI-Frontier-Lab</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Noto Sans Mono CJK SC for proper ASCII art alignment with Chinese characters -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Mono+CJK+SC:wght@400;700&display=swap" rel="stylesheet" />

    <!-- Theme Toggle Script -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme') || 'auto';
        const effective = theme === 'auto'
          ? (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light')
          : theme;
        document.documentElement.setAttribute('data-effective-theme', effective);
        if (theme !== 'auto') {
          document.documentElement.setAttribute('data-theme', theme);
        }
      })();
    </script>
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="logo">AI-Frontier-Lab</a>
        <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme" title="切换主题 (点击切换 L/D/A)">
          <svg class="icon-sun" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
          </svg>
          <svg class="icon-moon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
          <svg class="icon-auto" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
          </svg>
        </button>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; 2026 AI-Frontier-Lab</p>
    </footer>

    <script is:inline>
      (function() {
        const THEMES = ['light', 'dark', 'auto'];
        const STORAGE_KEY = 'theme';
        const toggle = document.getElementById('theme-toggle');

        function getSystemTheme() {
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }

        function getEffectiveTheme(theme) {
          return theme === 'auto' ? getSystemTheme() : theme;
        }

        function applyTheme(theme) {
          const effective = getEffectiveTheme(theme);
          document.documentElement.setAttribute('data-theme', theme === 'auto' ? '' : theme);
          document.documentElement.setAttribute('data-effective-theme', effective);
          updateIcon(theme);
        }

        function updateIcon(theme) {
          const icons = toggle.querySelectorAll('svg');
          icons.forEach(icon => icon.style.display = 'none');
          if (theme === 'light') {
            toggle.querySelector('.icon-sun').style.display = 'block';
          } else if (theme === 'dark') {
            toggle.querySelector('.icon-moon').style.display = 'block';
          } else {
            toggle.querySelector('.icon-auto').style.display = 'block';
          }
        }

        const savedTheme = localStorage.getItem(STORAGE_KEY) || 'auto';
        let currentTheme = savedTheme;
        applyTheme(currentTheme);

        if (toggle) {
          toggle.addEventListener('click', function() {
            const idx = THEMES.indexOf(currentTheme);
            currentTheme = THEMES[(idx + 1) % THEMES.length];
            localStorage.setItem(STORAGE_KEY, currentTheme);
            applyTheme(currentTheme);
          });
        }

        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', function() {
          applyTheme(localStorage.getItem(STORAGE_KEY) || 'auto');
        });
      })();
    </script>
  </body>
</html>

<style is:global>
  :root {
    --bg-primary: #f8f9fa;
    --bg-secondary: #ffffff;
    --bg-tertiary: #f0f0f0;
    --text-primary: #1a1a2e;
    --text-secondary: #4a4a5e;
    --text-muted: #888888;
    --accent: #e94560;
    --accent-hover: #ff6b6b;
    --border: #e0e0e0;
    --code-bg: #f5f5f5;
    --header-bg: #1a1a2e;
    --header-text: #e94560;
    --shadow: rgba(0, 0, 0, 0.1);
  }

  [data-effective-theme="dark"] {
    --bg-primary: #0f0f1a;
    --bg-secondary: #1a1a2e;
    --bg-tertiary: #252540;
    --text-primary: #e0e0e0;
    --text-secondary: #a0a0b0;
    --text-muted: #666677;
    --accent: #e94560;
    --accent-hover: #ff6b6b;
    --border: #3a3a4a;
    --code-bg: #1a1a2e;
    --header-bg: #0a0a14;
    --header-text: #e94560;
    --shadow: rgba(0, 0, 0, 0.3);
  }
</style>

<style>
  :global(*) {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :global(body) {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: var(--text-primary);
    background: var(--bg-primary);
    line-height: 1.6;
  }

  /* Fix ASCII art alignment */
  :global(pre) {
    font-family: 'Noto Sans Mono CJK SC', 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', 'Droid Sans Mono', 'Source Code Pro', 'Menlo', 'Consolas', 'Courier New', monospace !important;
    font-size: 0.9em;
    line-height: 1.2;
    overflow-x: auto;
    white-space: pre;
    -moz-tab-size: 4;
    -o-tab-size: 4;
    tab-size: 4;
    font-variant-ligatures: none;
    letter-spacing: 0;
    font-feature-settings: 'tnum' 1, 'zero' 1;
    background: var(--code-bg);
    padding: 1rem;
    border-radius: 8px;
  }

  :global(code) {
    font-family: 'Noto Sans Mono CJK SC', 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', 'Droid Sans Mono', 'Source Code Pro', monospace;
    font-size: 0.9em;
    background: var(--code-bg);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
  }

  :global(pre code) {
    display: block;
    padding: 0;
    background: transparent;
  }

  header {
    background: var(--header-bg);
    padding: 1rem 2rem;
  }

  header nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    color: var(--header-text);
    text-decoration: none;
    font-size: 1.25rem;
    font-weight: 700;
  }

  .theme-toggle {
    background: transparent;
    border: 1px solid var(--header-text);
    border-radius: 6px;
    padding: 0.4rem;
    cursor: pointer;
    color: var(--header-text);
    opacity: 0.8;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .theme-toggle:hover {
    opacity: 1;
  }

  .theme-toggle svg {
    display: none;
  }

  .theme-toggle .icon-sun {
    display: block;
  }

  main {
    max-width: 960px;
    margin: 2rem auto;
    padding: 0 1.5rem;
  }

  footer {
    text-align: center;
    padding: 2rem;
    color: var(--text-muted);
    font-size: 0.875rem;
  }
</style>
