---
interface Props {
  title: string;
  category: string;
  difficulty: string;
  date: Date;
  status: string;
  tags: string[];
}

const { title, category, difficulty, date, status, tags } = Astro.props;
---

<div class="topic-header">
  <div class="meta">
    <span class="category">{category}</span>
    <span class="difficulty" data-level={difficulty}>{difficulty}</span>
    <span class="status" data-status={status}>{status}</span>
    <time datetime={date.toISOString()}>{date.toLocaleDateString('zh-CN')}</time>
  </div>
  <h1>{title}</h1>
  <div class="tags">
    {tags.map((tag) => <span class="tag">#{tag}</span>)}
  </div>
</div>
<article class="topic-content">
  <slot />
</article>

<style>
  .topic-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .meta {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    margin-bottom: 0.75rem;
    font-size: 0.85rem;
  }

  .category {
    background: #1a1a2e;
    color: #fff;
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
  }

  .difficulty {
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    font-weight: 600;
  }

  .difficulty[data-level="beginner"] { background: #d4edda; color: #155724; }
  .difficulty[data-level="intermediate"] { background: #fff3cd; color: #856404; }
  .difficulty[data-level="advanced"] { background: #f8d7da; color: #721c24; }

  .status {
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    border: 1px solid #ccc;
  }

  .status[data-status="draft"] { border-color: #aaa; color: #666; }
  .status[data-status="in-progress"] { border-color: #ffc107; color: #856404; }
  .status[data-status="published"] { border-color: #28a745; color: #155724; }

  time {
    color: #888;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    color: #e94560;
    font-size: 0.85rem;
  }

  .topic-content {
    line-height: 1.8;
  }

  .topic-content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
  }

  .topic-content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .topic-content :global(p) {
    margin-bottom: 1rem;
  }

  .topic-content :global(ul), .topic-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .topic-content :global(a) {
    color: #e94560;
  }

  .topic-content :global(code) {
    background: #eee;
    padding: 0.1rem 0.3rem;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .topic-content :global(pre) {
    background: #1a1a2e;
    color: #e0e0e0;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .topic-content :global(pre code) {
    background: none;
    padding: 0;
  }
</style>
