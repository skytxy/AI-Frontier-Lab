---
interface Props {
  title: string;
  category: string;
  difficulty: string;
  date: Date;
  status: string;
  tags: string[];
}

const { title, category, difficulty, date, status, tags } = Astro.props;
---

<div class="topic-header">
  <div class="meta">
    <span class="category">{category}</span>
    <span class="difficulty" data-level={difficulty}>{difficulty}</span>
    <span class="status" data-status={status}>{status}</span>
    <time datetime={date.toISOString()}>{date.toLocaleDateString('zh-CN')}</time>
  </div>
  <h1>{title}</h1>
  <div class="tags">
    {tags.map((tag) => <span class="tag">#{tag}</span>)}
  </div>
</div>
<article class="topic-content">
  <slot />
</article>

<style>
  .topic-header {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .meta {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .category {
    background: var(--accent);
    color: #fff;
    padding: 0.25rem 0.6rem;
    border-radius: var(--radius-sm);
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .difficulty {
    padding: 0.25rem 0.6rem;
    border-radius: var(--radius-sm);
    font-weight: 600;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
  }

  .difficulty[data-level="beginner"] {
    background: var(--success);
    color: #fff;
  }
  .difficulty[data-level="intermediate"] {
    background: var(--warning);
    color: #1a1a2e;
  }
  .difficulty[data-level="advanced"] {
    background: var(--danger);
    color: #fff;
  }

  .status {
    padding: 0.25rem 0.6rem;
    border-radius: var(--radius-sm);
    border: 1px solid var(--border);
    font-weight: 500;
  }

  .status[data-status="draft"] {
    border-color: var(--text-muted);
    color: var(--text-muted);
  }
  .status[data-status="in-progress"] {
    border-color: var(--accent);
    color: var(--accent);
  }
  .status[data-status="published"], .status[data-status="completed"] {
    border-color: var(--success);
    color: var(--success);
  }

  time {
    color: var(--text-muted);
    font-size: 0.8rem;
  }

  h1 {
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    color: var(--accent);
    font-size: 0.8rem;
    font-weight: 500;
  }

  /* Content styling */
  .topic-content {
    font-size: 1.05rem;
    line-height: 1.8;
  }

  .topic-content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--border);
  }

  .topic-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .topic-content :global(h4) {
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .topic-content :global(p) {
    margin-bottom: 1.25rem;
  }

  .topic-content :global(ul), .topic-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.75rem;
  }

  .topic-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .topic-content :global(a) {
    color: var(--accent);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .topic-content :global(a:hover) {
    border-bottom-color: var(--accent);
  }

  .topic-content :global(code) {
    background: var(--bg-tertiary);
    color: var(--text-primary);
    padding: 0.2rem 0.5rem;
    border-radius: var(--radius-sm);
    font-size: 0.9em;
  }

  .topic-content :global(pre) {
    background: var(--code-bg);
    color: var(--code-text);
    padding: 1.25rem;
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid var(--border);
  }

  .topic-content :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  /* Special callout boxes */
  .topic-content :global(blockquote) {
    margin: 1.5rem 0;
    padding: 1rem 1.25rem;
    background: var(--blockquote-bg);
    border-left: 4px solid var(--blockquote-border);
    border-radius: 0 var(--radius-md) var(--radius-md) 0;
    color: var(--blockquote-text);
  }

  .topic-content :global(blockquote p:last-child) {
    margin-bottom: 0;
  }

  /* Syntax highlighting fix */
  .topic-content :global(.astro-code) {
    font-family: 'IBM Plex Mono', 'Noto Sans Mono CJK SC', monospace !important;
    font-variant-ligatures: none;
    letter-spacing: 0;
  }

  .topic-content :global(.astro-code .line) {
    font-family: 'IBM Plex Mono', 'Noto Sans Mono CJK SC', monospace !important;
  }

  /* Tables */
  .topic-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  .topic-content :global(th), .topic-content :global(td) {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid var(--border);
  }

  .topic-content :global(th) {
    font-weight: 600;
    color: var(--text-secondary);
    background: var(--bg-tertiary);
  }

  .topic-content :global(tr:hover) {
    background: var(--bg-tertiary);
  }
</style>
