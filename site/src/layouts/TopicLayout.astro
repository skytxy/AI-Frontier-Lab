---
interface Props {
  title: string;
  category: string;
  difficulty: string;
  date: Date;
  status: string;
  tags: string[];
}

const { title, category, difficulty, date, status, tags } = Astro.props;
---

<div class="topic-header">
  <div class="meta">
    <span class="category">{category}</span>
    <span class="difficulty" data-level={difficulty}>{difficulty}</span>
    <span class="status" data-status={status}>{status}</span>
    <time datetime={date.toISOString()}>{date.toLocaleDateString('zh-CN')}</time>
  </div>
  <h1>{title}</h1>
  <div class="tags">
    {tags.map((tag) => <span class="tag">#{tag}</span>)}
  </div>
</div>
<article class="topic-content">
  <slot />
</article>

<style>
  .topic-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .meta {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    margin-bottom: 0.75rem;
    font-size: 0.85rem;
  }

  .category {
    background: var(--accent);
    color: #fff;
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
  }

  .difficulty {
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    font-weight: 600;
  }

  .difficulty[data-level="beginner"] { background: #d4edda; color: #155724; }
  .difficulty[data-level="intermediate"] { background: #fff3cd; color: #856404; }
  .difficulty[data-level="advanced"] { background: #f8d7da; color: #721c24; }

  /* Dark mode adjustments for difficulty badges */
  :global([data-effective-theme="dark"]) .difficulty[data-level="beginner"] {
    background: #1a4d1a;
    color: #90ee90;
  }
  :global([data-effective-theme="dark"]) .difficulty[data-level="intermediate"] {
    background: #4d3d00;
    color: #ffd700;
  }
  :global([data-effective-theme="dark"]) .difficulty[data-level="advanced"] {
    background: #4d1a1a;
    color: #ff6b6b;
  }

  .status {
    padding: 0.15rem 0.5rem;
    border-radius: 4px;
    border: 1px solid var(--border);
  }

  .status[data-status="draft"] { border-color: var(--text-muted); color: var(--text-muted); }
  .status[data-status="in-progress"] { border-color: var(--accent); color: var(--accent); }
  .status[data-status="published"] { border-color: var(--accent); color: var(--accent); }

  time {
    color: var(--text-muted);
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    color: var(--accent);
    font-size: 0.85rem;
  }

  .topic-content {
    line-height: 1.8;
  }

  .topic-content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
  }

  .topic-content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .topic-content :global(p) {
    margin-bottom: 1rem;
  }

  .topic-content :global(ul), .topic-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  .topic-content :global(a) {
    color: var(--accent);
  }

  .topic-content :global(code) {
    background: var(--code-bg);
    padding: 0.1rem 0.3rem;
    border-radius: 3px;
    font-size: 0.9em;
  }

  .topic-content :global(pre) {
    background: var(--code-bg);
    color: var(--text-primary);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1rem;
    border: 1px solid var(--border);
  }

  .topic-content :global(pre code) {
    background: none;
    padding: 0;
  }

  /* Force CJK-aware monospace font for all code blocks, including Shiki */
  .topic-content :global(.astro-code) {
    font-family: 'Noto Sans Mono CJK SC', 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', 'Droid Sans Mono', 'Source Code Pro', 'Menlo', 'Consolas', 'Courier New', monospace !important;
    font-variant-ligatures: none;
    letter-spacing: 0;
  }

  .topic-content :global(.astro-code .line) {
    font-family: 'Noto Sans Mono CJK SC', 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', 'Droid Sans Mono', 'Source Code Pro', 'Menlo', 'Consolas', 'Courier New', monospace !important;
  }
</style>
